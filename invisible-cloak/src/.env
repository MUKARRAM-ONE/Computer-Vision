# Invisible Cloak Environment Variables

# Camera settings
CAMERA_INDEX=0

# Default cloak color (red, blue, green, pink, light pink, hot pink, pastel pink, sky blue, light blue, yellow, orange, purple)
DEFAULT_CLOAK_COLOR=red

# HSV color ranges can be customized here if needed
# Format: min_hue,min_saturation,min_value,max_hue,max_saturation,max_value
# RED_COLOR_RANGE=0,120,70,10,255,255
# BLUE_COLOR_RANGE=100,150,0,140,255,255
# GREEN_COLOR_RANGE=40,100,50,80,255,255
# PINK_COLOR_RANGE=140,100,100,170,255,255
# LIGHT_PINK_COLOR_RANGE=140,30,100,170,100,255
# HOT_PINK_COLOR_RANGE=150,100,100,165,255,255
# PASTEL_PINK_COLOR_RANGE=145,30,150,165,120,255
# SKY_BLUE_COLOR_RANGE=90,100,100,110,255,255
# LIGHT_BLUE_COLOR_RANGE=90,50,100,110,150,255
# YELLOW_COLOR_RANGE=20,100,100,40,255,255
# ORANGE_COLOR_RANGE=10,100,100,25,255,255
# PURPLE_COLOR_RANGE=125,50,50,150,255,255

# Performance settings
CAMERA_RESIZE_WIDTH=640
## Time in seconds to sleep between frames in the main loop. Small non-zero
## values improve responsiveness in multi-threaded readers and avoid tight CPU
## loops. Use 0.01 for near-real-time or increase if CPU is constrained.
FRAME_DELAY=0.01

# Ensure Python stdout/stderr are line-buffered which helps with real-time logs
# when running via some launchers (optional)
PYTHONUNBUFFERED=1